<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:paddingBottom="10px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="10px">

        <ImageView
            android:id="@+id/img_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_bluetooth_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_blue"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="36px" />

            <TextView
                android:id="@+id/txt_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="34px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_idle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_rssi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36px" />

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="10px"
                android:src="@drawable/ic_bluetooth_searching_black_24dp" />

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="@string/connect"
                android:textSize="34px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_connected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connected"
                android:textColor="@color/colorPrimary"
                android:textSize="36px" />

            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@drawable/btn_selector"
                android:text="@string/disconnect"
                android:textColor="@color/colorWhite"
                android:textSize="34px" />

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@drawable/btn_selector"
                android:text="@string/enter"
                android:textColor="@color/colorWhite"
                android:textSize="34px" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>